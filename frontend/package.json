{
  "name": "rag-assistant",
  "displayName": "RAG Code Assistant",
  "description": "AI-powered code assistant using RAG (Retrieval-Augmented Generation) to answer questions about your codebase",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "rag-assistant.chat-participant",
        "name": "RAG-Assistant",
        "description": "Ask me anything about your codebase using AI-powered RAG",
        "fullName": "RAG Code Assistant",
        "commands": [
          {
            "name": "ask",
            "description": "Ask a question about your codebase"
          },
          {
            "name": "search",
            "description": "Search for specific code patterns or functionality"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "rag-assistant.ask",
        "title": "Ask RAG Assistant",
        "category": "RAG Assistant"
      },
      {
        "command": "rag-assistant.search",
        "title": "Search Code",
        "category": "RAG Assistant"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
} 